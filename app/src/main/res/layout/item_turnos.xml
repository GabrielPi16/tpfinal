<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/turno_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="3dp"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/turno_tvInformId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="Turno 777"
            android:textColor="@color/teal_200" />

        <TextView
            android:id="@+id/turno_fechaCreacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="Creado el dÃ­a 01/02/2017" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/turno_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/turno_medico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Juan Ramos"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/teal_700" />

        <TextView
            android:id="@+id/turno_lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinica Mayo. San Jeronimo 3054"
            android:textAppearance="@android:style/TextAppearance" />

        <TextView
            android:id="@+id/turno_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: 17/03/2017"
            android:textAppearance="@android:style/TextAppearance" />

        <TextView
            android:id="@+id/turno_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora: 10:30 AM"
            android:textAppearance="@android:style/TextAppearance" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/turno_btnDelete"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="@color/design_default_color_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eliminar Turno" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>